# Maintainer: Kostas Karanikolas <lastname[at]gmail[dot]com>
pkgname=fuel
pkgver=0.9.7
pkgrel=2
pkgdesc="A GUI front-end to Fossil SCM"
arch=(i686 x86_64)
url="http://code.google.com/p/fuel-scm/"
license=('GPL2')
depends=('qt4>=4.7.0', 'qtwebkit>=2.2.2' 'fossil')
source=("http://fuel-scm.googlecode.com/files/${pkgname}-${pkgver}-test.tar.gz")

md5sums=(ce86b6879871b3e8193d9469c985899e) #generate with 'makepkg -g'

build() {
  cd "${srcdir}"
  [ -d build ] && rm -r build
  mkdir build
  cd build
  qmake-qt4 "${srcdir}/${pkgname}-${pkgver}/fuel.pro"
  make
}

package() {
  cd "${srcdir}/build"
  make INSTALL_ROOT="${pkgdir}" install
}

