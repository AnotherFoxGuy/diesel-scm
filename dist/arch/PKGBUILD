# Maintainer: Kostas Karanikolas <lastname[at]gmail[dot]com>
pkgname=fuel
pkgver=1.0.0
pkgrel=1
pkgdesc="A GUI front-end to Fossil SCM"
arch=(i686 x86_64)
url="http://code.google.com/p/fuel-scm/"
license=('GPL2')
depends=('qt5-base>=5.4.0', 'qt5-webkit>=5.2.0' 'fossil')
source=("http://fuelscm.org/files/releases/${pkgname}-${pkgver}.tar.gz")

sha256sums=(6194644ff71f961214411fd340c5dad3e2c96378040ddb7928061e24f9214faf) # Generate with 'makepkg -g'

build() {
  cd "${srcdir}"
  [ -d build ] && rm -r build
  mkdir build
  cd build
  qmake-qt5 "${srcdir}/${pkgname}-${pkgver}/fuel.pro"
  make
}

package() {
  cd "${srcdir}/build"
  make INSTALL_ROOT="${pkgdir}" install
}

